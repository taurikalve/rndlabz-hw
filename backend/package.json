    "@types/supertest": "^6.0.3",
    "concurrently": "^9.1.2",
    "jest": "^30.1.3",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "typescript": "^5.4.4"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/mongodb": "^9.0.2",
    "dotenv": "^17.2.1",
